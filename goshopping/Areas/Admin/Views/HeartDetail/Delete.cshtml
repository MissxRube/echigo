@model goshopping.Models.HeartDetails

@{
    ViewBag.Title = "心願刪除";
    Layout = "~/Views/Shared/_LayoutEdit.cshtml";
}

@using (Html.BeginForm("Delete", "HeartDetail", new { area = "Admin" }, FormMethod.Post, new { id = "popupForm" }))
{
    @Html.HiddenFor(model => model.rowid)

    <div class="form-group">
        @Html.LabelFor(model => model.heart_title, htmlAttributes: new { @class = "control-label control-header" })
        @Html.Label("：", htmlAttributes: new { @class = "control-label control-header" })
        @if (Model.heart_title != null)
        {<span class="control-label control-value">@Model.heart_title</span>}
    </div>



    <div class="form-group">
        @Html.LabelFor(model => model.heart_name, htmlAttributes: new { @class = "control-label control-header" })
        @Html.Label("：", htmlAttributes: new { @class = "control-label control-header" })
        @if (Model.heart_name != null)
        {<span class="control-label control-value">@Model.heart_name</span>}
    </div>



    <div class="form-group">
        @Html.LabelFor(model => model.heart_content, htmlAttributes: new { @class = "control-label control-header" })
        @Html.Label("：", htmlAttributes: new { @class = "control-label control-header" })
        @if (Model.heart_content != null)
        {<span class="control-label control-value">@Model.heart_content</span>}
    </div>



    <div>
        <input type="submit" value="刪除" class="btn btn-danger form-button" />
    </div>
}

