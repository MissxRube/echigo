@model goshopping.Models.HeartDetails


@{
    ViewBag.Title = "心願資料" + ((Model.rowid > 0) ? "修改" : "新增");
    Layout = "~/Views/Shared/_LayoutEdit.cshtml";
}

@using (Html.BeginForm("Edit", "HeartDetail", new { area = "Admin" }, FormMethod.Post, new { id = "popupForm" }))
{
    @Html.AntiForgeryToken()
    if (Model != null && Model.rowid > 0)
    {
        @Html.HiddenFor(model => model.rowid)
    }



    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
<div class="form-group">
    @Html.LabelFor(model => model.flag, htmlAttributes: new { @class = "control-label control-header" })
    @Html.TextBoxFor(model => model.flag, new { @class = "form-control" })
    @Html.ValidationMessageFor(model => model.flag)
</div>



    <div class="form-group">
        @Html.LabelFor(model => model.Mno, htmlAttributes: new { @class = "control-label control-header" })
        @Html.TextBoxFor(model => model.Mno, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Mno)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Mname, htmlAttributes: new { @class = "control-label control-header" })
        @Html.TextBoxFor(model => model.Mname, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Mname)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.heart_title, htmlAttributes: new { @class = "control-label control-header" })
        @Html.TextBoxFor(model => model.heart_title, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.heart_title)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.heart_name, htmlAttributes: new { @class = "control-label control-header" })
        @Html.TextBoxFor(model => model.heart_name, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.heart_name)

    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.heart_content, htmlAttributes: new { @class = "control-label control-header" })
        @Html.TextBoxFor(model => model.heart_content, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.heart_content)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.heart_url, htmlAttributes: new { @class = "control-label control-header" })
        @Html.TextBoxFor(model => model.heart_url, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.heart_url)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.deadline_start, htmlAttributes: new { @class = "control-label control-header col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.deadline_start, new { htmlAttributes = new { @class = "form-control datepicker" } })
            @Html.ValidationMessageFor(model => model.deadline_start, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        @Html.LabelFor(model => model.deadline_end, htmlAttributes: new { @class = "control-label control-header col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.deadline_end, new { htmlAttributes = new { @class = "form-control datepicker" } })
            @Html.ValidationMessageFor(model => model.deadline_end, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.discount, htmlAttributes: new { @class = "control-label control-header col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.discount, new { htmlAttributes = new { @class = "form-control datepicker" } })
            @Html.ValidationMessageFor(model => model.discount, "", new { @class = "text-danger" })
        </div>
    </div>




    <div class="form-group">
        @Html.LabelFor(model => model.remark, htmlAttributes: new { @class = "control-label control-header" })
        @Html.TextBoxFor(model => model.remark, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.remark)
    </div>



    <div class="form-group">
        @Html.LabelFor(model => model.flag, htmlAttributes: new { @class = "control-label control-header" })
        @Html.TextBoxFor(model => model.flag, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.flag)
    </div>





    <div>
        <input type="submit" value="存檔" class="btn btn-success form-button" />
    </div>
}

