@using DevStudio;
@using DevStudio.Securitys;
@model IEnumerable<goshopping.Models.Carts>

@{
    ViewBag.Title = "CartList";
    Layout = "~/Views/Shared/_Layoutopen.cshtml";
    string str_image_url = "";
    string str_qty_name = "";
    int index = 0;
}

<section class="pt-5 pb-5 mt-5">
    <div class="container">
        <div class="row w-100">
            <div class="col-12"><h3 class="display-5 mb-2 text-center h2 cartlist-title ">購物車明細</h3></div>
            <div class=" col-12">

                <div class="col-12 " style="padding-left:15%;"><img src="../img/shop/line01.png" alt="Alternate Text" /></div>
                <table id="shoppingCart" class="table table-condensed table-responsive border">
                    <thead>
                        <tr>
                            <th style="width:60%;padding-left:25%">購買商品</th>
                            <th style="width:12%;padding-left:2%">單價</th>
                            <th style="width:20%;padding-left:9%">數量</th>
                            <th style="width:6%;padding-left:2%">刪除</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            index += 1;
                            str_qty_name = "Carts[" + index + "].qty";
                            str_image_url = string.Format("../../Images/product/{0}/{1}.jpg", item.product_no, item.product_no);
                            <tr>
                                <td data-th="Product">
                                    <div class="row">
                                        <div class="col-md-3 text-left">
                                            <img src="@str_image_url" alt="@item.product_no" class="img-fluid d-none d-md-block rounded mb-2 shadow ">
                                        </div>
                                        <div class="col-md-9 text-left mt-sm-2 pt-3">
                                            <h6>@item.product_name</h6>
                                            <p class="font-weight-light">@item.product_spec</p>
                                        </div>
                                    </div>
                                </td>
                                <td data-th="Price" class="pt-4 h3">$@item.price</td>
                                <td data-th="Quantity" style="text-wrap:none">
                                    <div class=" text-center">
                                        <a class="btn" href="/Product/CartMinus/@item.rowid">
                                            <div class="btn-minus" style="float:right"><i class="fas fa-2x fa-minus-square"></i></div>
                                        </a>
                                        @item.qty
                                        <a class="btn" href="/Product/CartPlus/@item.rowid">
                                            <div class="btn-plus" style="float:left"><i class="fas fa-2x fa-plus-square"></i></div>
                                        </a>
                                    </div>
                                </td>
                                <td class="actions" data-th="">
                                    <div class="text-right">
                                        <a href="/Product/CartDelete/@item.rowid" class="btn btn-dark border-secondary bg-white btn-md mb-2">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                <div class="float-right text-center">
                    <h4>合計金額:</h4>
                    <h1>$@Cart.Totals.ToString("#,##0")</h1>

                    <div class="mt-0 pt-0" >
                        <h4>購買須知</h4>
                        <p>退換貨制度：韓國代購的預購商品，屬代購性質無提供退貨，韓國代購的現貨商品（商品於instock 商品分類中）及自訂款商品提供退換。</p>


                        (一)付款資訊<br>

                        1.ATM匯款：取得虛擬帳號後，匯款30分鐘會自動對帳<br>

                        2.信用卡付款<br>


                        (二)國內離島地區<br>


                        物流：Ezship 新竹貨運 郵寄<br>

                        1.全家 萊爾富 OK 超商取貨三天內到貨 運費60元<br>

                        2.新竹貨運 三天內到貨（出貨日為週一至週五）運費120元<br>

                        3.郵寄 台灣離島區（金門及連江）運費100元<br>




                    </div>

                </div>
            </div>
            
        </div>

            <div class="row mt-4 d-flex align-items-center">
                <div class="col-sm-6 order-md-2 text-left">
                    <a href="/Product/Checkout" class="btn btn-sopping mb-4 btn-lg pl-5 pr-5">
                        <img src="~/img/shop/monetization_on.svg" alt="Alternate Text" />
                        結帳
                    </a>

                </div>
                <div class="col-sm-6 mb-3 mb-m-1 order-md-1 text-md-right">
                    <a href="/Home/Index" class="text-white btn btn-outline-info" style="text-decoration:none;">

                        <i class="fas fa-cart-plus"></i>
                        繼續購物
                    </a>
                </div>
            </div>
        </div>
</section>
